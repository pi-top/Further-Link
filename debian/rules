#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk

%:
	dh $@

override_dh_auto_build:
	echo "__version__ = '$(DEB_VERSION)'" > src/lib/further_link/version.py
	# Create extra files from env vars, without quotes
	# https://stackoverflow.com/questions/10424645/how-to-convert-a-quoted-string-to-a-normal-one-in-makefile
	echo $(DATA) # just testing
	$(file > extra/fl.dat,$(subst $\",,$(DATA)))
	$(file > extra/key.aes.pem,$(shell echo $(TLS_KEY)))

	dh_auto_build

override_dh_clean:
	rm -rf extra/fl.dat extra/key.aes.pem

	dh_clean

override_dh_installsystemd:
	dh_installsystemd --name=pt-further-link
