#!/usr/bin/make -f

%:
	dh $@

DEBVER=$(shell dpkg-parsechangelog -SVersion)

override_dh_auto_build:
	$(shell echo "__version__ = '${DEBVER}'" > src/lib/further_link/version.py)
	$(shell cat src/lib/further_link/version.py)
	dh_auto_build

override_dh_installsystemd:
	dh_installsystemd --name=pt-further-link
